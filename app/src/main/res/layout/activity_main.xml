<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_get_all"
        style="@style/menu_button"
        android:text="@string/get_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/button_get_one"
        style="@style/menu_button"
        android:text="@string/get_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_get_all"
        />

    <Button
        android:id="@+id/button_create"
        style="@style/menu_button"
        android:text="@string/create_random_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_get_one"
         />

    <TextView
        android:id="@+id/tv_open_guppy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/menu_button_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/shake_device"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/button_create" />

</androidx.constraintlayout.widget.ConstraintLayout>